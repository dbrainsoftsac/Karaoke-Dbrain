<h1>Lista Artistas</h1>


<input type="text" id="search" placeholder="BÃºsqueda" class="form-control"></input>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre artista</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.no_artista %></td>
        <td><%= link_to 'Ver', artist %></td>
        <td><%= link_to 'Editar', edit_artist_path(artist) %></td>
        <td><%= link_to 'Eliminar', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div> 

<%= link_to 'Nuevo Artista', new_artist_path , :class => 'btn btn-default' %>

