<p id="notice"><%= notice %></p>

<h1>Lista Canciones</h1>


<input type="text" id="search" placeholder="Búsqueda" class="form-control"></input>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Artista</th>
      <th>Canción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.artist.no_artista %></td>
        <td><%= song.no_cancion %></td>
        <td><%= link_to 'Ver', song %></td>
        <td><%= link_to 'Editar', edit_song_path(song) %></td>
        <td><%= link_to 'Eliminar', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nueva Canción', new_song_path , :class => 'btn btn-default' %>

  <script type="text/javascript">
   $("#search").on("keyup", function() {
    searchTable($(this).val());
  });
  </script>