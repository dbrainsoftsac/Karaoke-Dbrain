<p id="notice"><%= notice %></p>

<h1>Lista Tipo Productos</h1>


<input type="text" id="search" placeholder="BÃºsqueda" class="form-control"></input>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre tipo producto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_productos.each do |tipo_producto| %>
      <tr>
        <td><%= tipo_producto.no_tipo_producto %></td>
        <td><%= link_to 'Ver', tipo_producto %></td>
        <td><%= link_to 'Editar', edit_tipo_producto_path(tipo_producto) %></td>
        <td><%= link_to 'Eliminar', tipo_producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nuevo Tipo producto', new_tipo_producto_path %>




  <script type="text/javascript">
    
    $("#search").on("keyup", function() {
      var value = $(this).val();

      $("table tbody tr").each(function(index) {
          if (index !== 0) {

              $row = $(this);

              var id = $row.find("td:first").text();

              if (id.indexOf(value) !== 0) {
                  $row.hide();
              }
              else {
                  $row.show();
              }
          }
      });
  });
  </script>