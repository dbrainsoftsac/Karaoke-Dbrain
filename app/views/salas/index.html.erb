<p id="notice"><%= notice %></p>

<h1>Lista Salas</h1>

<input type="text" id="search" placeholder="BÃºsqueda" class="form-control"></input>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Local</th>
      <th>Nombre</th>
      <th>Capacidad</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.Local.no_local %></td>
        <td><%= sala.no_sala %></td>
        <td><%= sala.qt_capacidad %></td>
        <td><%= sala.tx_sala_descripcion %></td>
        <td><%= link_to 'Ver', sala %></td>
        <td><%= link_to 'Editar', edit_sala_path(sala) %></td>
        <td><%= link_to 'Eliminar', sala, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nueva Sala', new_sala_path , :class => 'btn btn-default' %>



<script type="text/javascript">

  $("#search").on("keyup", function() {
    searchTable($(this).val());
  });

</script>