<%- model_class = Reservation -%>

<div class="page-header">

 

<%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>


</div><table class="table table-striped table-bordered table-hover">

  <thead>

    <tr>

      <th>ID</th>

      <th>Fecha de reserva</th>

      <th>Lugares</th>

      <th>Estado</th>

      <th>Espera</th>

